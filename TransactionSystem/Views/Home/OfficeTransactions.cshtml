@model TransactionSystem.Models.OfficeTransactionModel;
<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="transactionTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Descreption</th>
                    <th>Credit</th>
                    <th>Debt</th>
                    <th>Running Balance</th>
                    
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{ 
<script>
    $(document).ready(function () {
        $("#transactionTable").DataTable({
            "processing": true, 
            "serverSide": false, 
            "filter": true, //
            "ajax": {
                "url": "/Home/LoadData",
                "type": "POST",
                "datatype": "json"
            },
            
            "columns": [
                { "data": "TransactionDate", "name": "TransactionDate", "autoWidth": true },
                { "data": "Descreption", "name": "Descreption", "autoWidth": true },
                { "data": "Credit", "name": "Credit", "autoWidth": true },
                { "data": "Debit", "name": "Debit", "autoWidth": true },
                    { "data": "RunningBalance", "name": "RunningBalance", "autoWidth": true },
            ]

        });
    });


    
</script>
}